<h1>Reviews for <%=link_to @movie.title, @movie%></h1>
<ul class="reviews">
  <% @reviews.each do |review| %>
    <li>
      <%= render "shared/stars", percent: review.stars_as_percent%>
      <p>
        <%= profile_image(review.user, 35) %>
        <%= link_to review.user.name, review.user %>
        <span class="date"><%= time_ago_in_words(review.created_at) %> ago</span>
      </p>
      <p>
        <%= review.comment %>
      </p>
      <%= link_to "Edit", edit_movie_review_path(@movie, review) , class: "button" %>
      <%= link_to "Delete", movie_review_path(@movie, review), class: "button", data: { turbo_method: :delete, turbo_confirm: "Really? "} %>
    </li>
  <% end %>
</ul>
<p>Back to <strong><%= link_to "Movie", @movie %></strong></p>
